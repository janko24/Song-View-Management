@model SongViewLibrary.Model.UpdateSong

<h2>Edit Song</h2>

<div class="row mt-4">
    <div class="col-md-6">
        <form asp-action="Edit">
            @* <input type="hidden" asp-for="Id" /> *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 ">
                <label for="" class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly>
            </div>

            <div class="form-group mt-1">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="Url" class="control-label">URL</label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success" title="Save Changes">Save</button>
                <button type="button" class="btn btn-danger delete-song" data-songid="@Model.Id" title="Delete Song"
                        data-bs-toggle="popover" data-bs-trigger="focus" data-bs-html="true">
                    Delete
                </button>
                @* <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Song" title="Delete Song">Delete</button> *@
                <a asp-action="Index" class="btn btn-secondary" title="Back to Songs List">Back to List</a>
            </div>
        </form>
    </div>
</div>