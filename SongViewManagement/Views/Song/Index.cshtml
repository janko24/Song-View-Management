@model IEnumerable<SongViewLibrary.Model.Song>

<div class="container">
    <h2>Songs</h2>
    <div class="row">
        <div class="col-md-12">
            <p>
                <a asp-action="Add" class="btn btn-warning" title="Add New Song to List to Count the Views"><i class="bi bi-patch-plus"></i> Add New Song</a>
            </p>
        </div>
    </div>

    <div class="row table-responsive ">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>URL</th>
                        <th>Action</th>
                    </tr>
                </thead>


                <tbody class="">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Url)</td>
                            <td>
                                <div class="d-flex">

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm m-1 " title="Edit Song"><i class="bi bi-pencil"></i></a>
                                    
                                    <a href="#" class="btn btn-danger btn-sm delete-song m-1" data-songid="@item.Id" title="Delete Song"
                                       data-bs-toggle="popover" data-bs-trigger="focus" data-bs-html="true">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


